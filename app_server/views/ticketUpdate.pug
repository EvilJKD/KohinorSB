extends dshboard

block content 
    h1.txt-ticket-1  
        |Actualizar Ticket 
    .row
        form.row.g-3(action='' method='post' role='form')
            .row                                
                .col-ticket-1
                    input#id.form-control(type='text' placeholder='id' name='id' value=id readonly='')
    p.txt-ticket-2 
        |Llene todos los campos a continuaci√≥n

    .row
        form.row.g-3(action='' method='post' role='form')
            .row                                
                .col-ticket-1
                    p Asunto
                        input#asunto.form-control(type='text' placeholder='Asunto' name='asunto' value=asunto required='' readonly='')
                    p
            .row
                .col-ticket-1
                    p Usuario
                        input#usuario.form-control(type='text' placeholder='Usuario' name='usuario' value=usuario required='' readonly='')
            .row 
                .col-ticket-1 
                    p Fecha 
                        input#fecha.form-control(type='date' placeholder='Fecha' name='fecha' value=fecha required='')
            .row
                .col-ticket-1
                    p Status
                        select#status.form-control(name='status')
