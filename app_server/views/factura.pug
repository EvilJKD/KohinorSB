extends layout

block content

    #BannerFactura.container-fluid.pt-3 
        h1.text-center.text-white
            b Konihor SB
        h3.text-center.text-white
            b Tarifas

    .row.container-fluid.mx-0 
        .col-md-4 
            h2.text-center  
                |Revisar orden
        .col-md-4 
            h2.text-center  
                b Direccion 
        .col-md-4
            h2.text-center  
                |Confirmar Pedido


    .row.g-3.mt-4.container-fluid.mx-0
        .col-md-2
        .col-md-8
            .card
                .card-body
                    form.row.g-3(action='' method='post' role='form')
                        .col-md-5
                            input#nombre.form-control.infoPersona(type='text' name='nombre' placeholder='First Name')
                        .col-md-7
                            input#apellido.form-control.infoPersona(type='text' name='apellido' placeholder='Last Name')
                        .col-md-8
                            input#email.form-control.infoPersona(type='text' name='email' placeholder='Email')
                        .col-md-4
                            input#telefono.form-control.infoPersona(type='number' name='telefono' placeholder='Télf')
                        .col-md-12
                            input#direccion.form-control.infoPersona(type='string' name='direccion' placeholder='Calle y Número')
                        .col-md-5
                            input#codpostal.form-control.infoPersona(type='number' name='codpostal' placeholder='Código Postal')
                        .col-md-7
                            input#ciudad.form-control.infoPersona(type='text' name='ciudad' placeholder='Ciudad')
                        .col-md-6
                            select#pais.custom-select.form-control.infoPersona(name='pais')
                                option(selected='' disabled='') Pa&iacute;s
                        .col-md-6
                            select#estado.custom-select.form-control.infoPersona(name='estado')
                                option(selected='' disabled='') Estado/Provincia
                        .col-md-12
                            input#direccion.form-control.infoPersona(type='string' name='usuario' placeholder='usuario' value=usuario readonly='')
                        .col-md-2
                            a.btn.btn-dark.bg-kohinor-2(href='/carrito') Atr&aacute;s
                        .col-md-7
                        .col-md-2
                            a.btn.btn-dark.bg-kohinor-2(href='/confirmar' onclick="guardarInfoPersona()") Continuar
                        script(src='../scripts/restfulCountries.js')
            